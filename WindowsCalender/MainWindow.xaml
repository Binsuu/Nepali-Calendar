<Window x:Class="WindowsCalender.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WindowsCalender.WindowsCalender"
    Title="Nepali Calender" Height="326" Width="290"  WindowStartupLocation="CenterScreen" 
    AllowsTransparency="True" Topmost="True" WindowStyle="None" ResizeMode="NoResize" Foreground="White" Icon="Images/Icondrawer-Flags-Nepal.ico" ShowInTaskbar="False">
    <Window.Resources>
        <Storyboard x:Key="flyinStoryboard">
            <DoubleAnimation From="{Binding Location.FromLeft}" To="{Binding Location.ToLeft}"
                    Storyboard.TargetProperty="(Window.Left)" Duration="0:0:1"></DoubleAnimation>
            <DoubleAnimation From="{Binding Location.FromTop}" To="{Binding Location.ToTop}"
                    Storyboard.TargetProperty="(Window.Top)" Duration="0:0:1"></DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="fadeInfadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="(Window.Opacity)" From="0.0" To="1.0" AutoReverse="False"
                    AccelerationRatio="0.8" Duration="0:0:01"></DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="MouseHoverStoryBoard">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.25" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MouseLeaveStoryBoard">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.25" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="TextZoomIn" Duration="00:00:001">
            <DoubleAnimation Storyboard.TargetName="DateofToday" From="16" To="20" Storyboard.TargetProperty="FontSize"/>
        </Storyboard>
        <Storyboard x:Key="TextZoomOut" Duration="00:00:001">
            <DoubleAnimation Storyboard.TargetName="DateofToday" From="20" To="16" Storyboard.TargetProperty="FontSize"/>
        </Storyboard>


